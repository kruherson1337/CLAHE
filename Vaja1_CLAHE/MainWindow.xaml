<Window x:Class="Vaja1_CLAHE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vaja1_CLAHE"
        mc:Ignorable="d"
        Title="CLAHE" Height="818.5" Width="1672.5" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow">
    <Grid>
        <Image x:Name="imageOriginal" HorizontalAlignment="Left" Height="768" VerticalAlignment="Top" Width="768" MouseLeftButtonDown="Image_MouseLeftButtonDown" Stretch="Fill" MouseRightButtonDown="imageOriginal_MouseRightButtonDown"/>
        <StackPanel Orientation="Horizontal" x:Name="histogramStack" HorizontalAlignment="Left" Height="256" Margin="768,256,0,0" VerticalAlignment="Top" Width="768"/>
        <StackPanel Orientation="Horizontal" x:Name="channelStack" HorizontalAlignment="Left" Height="256" Margin="768,0,0,0" VerticalAlignment="Top" Width="768"/>
        <StackPanel Orientation="Horizontal" x:Name="stackComulativeFrequency" HorizontalAlignment="Left" Height="256" Margin="768,512,0,-142" VerticalAlignment="Top" Width="768"/>
        <Button x:Name="buttonReset" HorizontalAlignment="Right" VerticalAlignment="Top"  Width="120" Height="100" Content="Reset" Margin="0,0,0,0" Click="buttonReset_Click"></Button>
        <Button x:Name="buttonHE" HorizontalAlignment="Right" VerticalAlignment="Top" Width="120" Height="100" Content="HE" Margin="0,130,0,0" Click="buttonHE_Click"></Button>
        <Button x:Name="buttonAHE" HorizontalAlignment="Right" VerticalAlignment="Top" Width="120" Height="100" Content="AHE" Margin="0,250,0,0" Click="buttonAHE_Click"></Button>
        <Button x:Name="buttonCLHE" HorizontalAlignment="Right" VerticalAlignment="Top" Width="120" Height="100" Content="CLHE" Margin="0,370,0,0" Click="buttonCLHE_Click"></Button>
        <Button x:Name="buttonCLAHE" HorizontalAlignment="Right" VerticalAlignment="Top" Width="120" Height="100" Content="CLAHE" Margin="0,500,0,0" Click="buttonCLAHE_Click"></Button>
        <Label Content="Window" HorizontalAlignment="Right" Margin="0,605,85,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textboxAHEWindowSize" HorizontalAlignment="Right" Height="24" Margin="0,605,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="85" Text="64"/>
        <Label x:Name="labelTimeTaken" Content="" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Bottom"/>
        <Label Content="ClipLmt" HorizontalAlignment="Right" Margin="0,634,85,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textboxClipLimit" HorizontalAlignment="Right" Height="24" Margin="0,634,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="85" Text="5"/>
    </Grid>
</Window>
